<Window x:Class="clientWPF.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" MinHeight="250" MaxHeight="250" Width="300" MinWidth="300" Closed="Window_Closed" Topmost="True" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Icon="sync.ico">
    <Grid>
        <Label Content="Username" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" FontWeight="Bold"/>
        <TextBox Name="tUsername" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,40,10,0"/>
        <Label Content="Password" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,65,0,0" FontWeight="Bold"/>
        <PasswordBox Name="tPassword" VerticalAlignment="Top" Height="23" Margin="10,95,10,0"/>
        <Button Content="LogIn" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="10,130,0,0" Click="LogIn_Click" Height="36" FontWeight="Bold"/>
        <Button Content="Register" HorizontalAlignment="Right" VerticalAlignment="Top" Width="120" Margin="0,130,10,0" Click="Register_Click" Height="38" FontWeight="Bold"/>
        <Label Name="lError" Content="Error message" Margin="10,0,10,4" Foreground="Red" FontWeight="Bold" Height="44" VerticalAlignment="Bottom"/>
    </Grid>
</Window>